        mc:Ignorable="d"
        Title="WFP UI Control" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="26" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="26" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="26" />
        </Style>
    </Window.Resources>
    <Canvas x:Name="cas1">
        <TextBlock Text="结果:" Margin="10"/>
