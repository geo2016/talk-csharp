            <ListBoxItem Content="11111"/>
            <ListBoxItem Content="abc"/>
            <ListBoxItem Content="dddd"/>
        </ListBox>
        <ComboBox x:Name="cbo1" Canvas.Left="244" Canvas.Top="244" Width="120" IsEditable="True">
